{% extends 'default_frame.twig' %}

{% set body_class = 'registration_page' %}

{% block breadcrumb %}
    <div class="l-breadcrumb container">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="{{ url('homepage') }}">TOP</a></li>
      <li class="breadcrumb-item">新規会員登録確認</li>
    </ol>
  </div>
{% endblock %}

{% block main %}
    <h2>新規会員登録確認</h2>

  <div class="flow-box" class="row">
     <div class="flow-box-item col-sm-3">
      <p>規約承認</p>
     </div>
     <div class="flow-box-item col-sm-3">
      <p >登録内容入力</p>
     </div>
     <div class="flow-box-item col-sm-3">
      <p class="active">入力内容確認</p>
     </div>
     <div class="flow-box-item col-sm-3">
      <p>登録完了</p>
     </div>
  </div>

<div class="regist-form">
    <form method="post" action="{{ url('entry') }}">
        {{ form_widget(form._token) }}
    <table class="table table-striped">
            <tr id="confirm_box__name">
                <th>{{ form_label(form.name) }}</th>
                <td class="form-group input_name">
                    {{ form_widget(form.name.name01, { attr : { placeholder: '姓' }}) }}
                    {{ form_widget(form.name.name02, { attr : { placeholder: '名' }}) }}
                </td>
            </tr>
            <tr id="confirm_box__kana">
                <th>{{ form_label(form.kana) }}</th>
                <td class="form-group input_name">
                    {{ form_widget(form.kana.kana01, { attr : { placeholder: 'セイ' }}) }}
                    {{ form_widget(form.kana.kana02, { attr : { placeholder: 'メイ' }}) }}
                </td>
            </tr>
            <tr id="confirm_box__company_name">
                <th>{{ form_label(form.company_name) }}</th>
                <td class="form-group input_name">
                    {{ form_widget(form.company_name) }}
                </td>
            </tr>
            <tr id="confirm_box__company_name_kana">
                <th>{{ form_label(form.company_name_kana) }}</th>
                <td class="form-group input_name">
                    {{ form_widget(form.company_name_kana) }}
                </td>
            </tr>
            <tr id="confirm_box__atdress_detail">
                <th>{{ form_label(form.address) }}</th>
                <td>
                    <div id="confirm_box__zip" class="form-group form-inline input_zip {% if form.zip.zip01.vars.errors is not empty or form.zip.zip02.vars.errors is not empty %}has-error{% endif %}">{{ form_widget(form.zip) }}</div>
                    <div id="confirm_box__address" class="{% if form.address.pref.vars.errors is not empty or form.address.addr01.vars.errors is not empty or form.address.addr02.vars.errors is not empty %}has-error{% endif %}">
                        {{ form_widget(form.address) }}
                    </div>
                </td>
            </tr>
            <tr id="confirm_box__tel">
                <th>{{ form_label(form.full_tel) }}</th>
                <td>
                    <div class="form-inline form-group input_tel">
                        {{ form_widget(form.full_tel, {attr : {class : 'short'}}) }}
                    </div>
                </td>
            </tr>
            <tr id="confirm_box__fax">
                <th>{{ form_label(form.full_mobile) }}</th>
                <td>
                    <div class="form-inline form-group input_tel">
                        {{ form_widget(form.full_mobile, {attr : {class : 'short'}}) }}
                    </div>
                </td>
            </tr>
            <tr id="confirm_box__email">
                <th>{{ form_label(form.email) }}</th>
                <td>
                    <div class="form-group">
                        {{ form_widget(form.email) }}
                    </div>
                </td>
            </tr>
            <tr id="confirm_box__password">
                <th>{{ form_label(form.password) }}</th>
                <td>
                    <div class="form-group">
                        ********
                        {{ form_widget(form.password, {freeze_display_text: false}) }}
                    </div>
                </td>
            </tr>

            <tr id="confirm_box__birth">
                <th>{{ form_label(form.birth) }}</th>
                <td>
                    <div class="form-group form-inline">
                        {{ form_widget(form.birth) }}
                    </div>
                </td>
            </tr>
            <tr id="confirm_box__sex">
                <th>{{ form_label(form.sex) }}</th>
                <td>
                    <div class="form-group form-inline">
                        {{ form_widget(form.sex) }}
                    </div>
                </td>
            </tr>
            <tr id="confirm_box__job">
                <th>{{ form_label(form.job) }}</th>
                <td>
                    <div class="form-group form-inline">
                        {{ form_widget(form.job) }}
                    </div>
                </td>
            </tr>
        </table>
        <input type="hidden" name="entry[tel][tel01]" value="111">
        <input type="hidden" name="entry[tel][tel02]" value="222">
        <input type="hidden" name="entry[tel][tel03]" value="333">
        <input type="hidden" name="entry[fax][fax01]" value="">
        <input type="hidden" name="entry[fax][fax02]" value="">
        <input type="hidden" name="entry[fax][fax03]" value="">

        <div class="button-area row">
          <div class="col-sm-6 button-wrapper">
            <button type="submit" class="button button-gray button-contact-form"name="mode" value="back">戻る
                    </button>
          </div>
          <div class="col-sm-6 button-wrapper">
            <button type="submit" class="button button-red button-contact-form button-right-arrow"name="mode" value="complete">会員登録をする</button>
          </div>
        </div>

        <!-- <div id="confirm_box__footer" class="row no-padding">
            <div id="confirm_box__button_menu" class="btn_group col-sm-offset-4 col-sm-4">
                <p id="confirm_box__insert_button">
                    <button type="submit" class="btn btn-primary btn-block" name="mode" value="complete">
                        会員登録をする
                    </button>
                </p>
                <p id="confirm_box__back_button">
                    <button type="submit" class="btn btn-info btn-block" name="mode" value="back">戻る
                    </button>
                </p>
            </div>
        </div> -->
    </form>
    </div>
{% endblock %}
